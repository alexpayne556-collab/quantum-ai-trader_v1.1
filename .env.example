# Environment Variables for Quantum AI Trader
# Copy this to .env and fill in your actual API keys

# ============================================================================
# MARKET DATA APIs (Free Tier)
# ============================================================================

# Alpha Vantage - https://www.alphavantage.co/support/#api-key
# Free: 25 requests/day, 5 requests/minute
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Polygon.io - https://polygon.io/dashboard/signup
# Free: 5 API calls/minute, delayed data
POLYGON_API_KEY=your_polygon_key_here

# Finnhub - https://finnhub.io/register
# Free: 60 calls/minute, real-time US stocks
FINNHUB_API_KEY=your_finnhub_key_here

# Twelve Data - https://twelvedata.com/pricing
# Free: 800 requests/day, 8 requests/minute
TWELVE_DATA_API_KEY=your_twelve_data_key_here

# ============================================================================
# AI APIs
# ============================================================================

# Perplexity API - https://www.perplexity.ai/settings/api
# For AI-powered market analysis and chat
PERPLEXITY_API_KEY=your_perplexity_key_here

# OpenAI (Optional) - https://platform.openai.com/api-keys
# For alternative AI chat/analysis
OPENAI_API_KEY=your_openai_key_here

# ============================================================================
# TRADING PLATFORMS (Paper Trading)
# ============================================================================

# Alpaca Paper Trading - https://alpaca.markets/
# Free paper trading account
ALPACA_API_KEY=your_alpaca_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# TD Ameritrade (Optional) - https://developer.tdameritrade.com/
TD_AMERITRADE_API_KEY=your_td_key_here
TD_AMERITRADE_REDIRECT_URI=http://localhost:8080

# ============================================================================
# NOTIFICATIONS
# ============================================================================

# Twilio SMS - https://www.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_sid_here
TWILIO_AUTH_TOKEN=your_twilio_token_here
TWILIO_FROM_NUMBER=+1234567890
TWILIO_TO_NUMBER=+1234567890

# SendGrid Email - https://sendgrid.com/
SENDGRID_API_KEY=your_sendgrid_key_here
SENDGRID_FROM_EMAIL=your_email@example.com

# Discord Webhook (Optional)
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# ============================================================================
# DATABASE (Optional)
# ============================================================================

# PostgreSQL for storing trades/signals
DATABASE_URL=postgresql://user:password@localhost:5432/quantum_trader

# Redis for caching (Optional)
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Flask/API settings
FLASK_SECRET_KEY=your_random_secret_key_here
API_PORT=5000
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ============================================================================
# PORTFOLIO SETTINGS
# ============================================================================

# Starting capital (for new portfolios)
STARTING_CAPITAL=100000

# Risk management
MAX_POSITION_SIZE=0.20
MAX_SECTOR_ALLOCATION=0.40
STOP_LOSS_PERCENT=0.08

# ============================================================================
# TRAINING SETTINGS
# ============================================================================

# Google Colab settings (for GPU training)
COLAB_API_KEY=your_colab_key_here

# Weights & Biases for experiment tracking
WANDB_API_KEY=your_wandb_key_here

# ============================================================================
# FEATURE FLAGS
# ============================================================================

ENABLE_PAPER_TRADING=false
ENABLE_LIVE_TRADING=false
ENABLE_SMS_ALERTS=false
ENABLE_EMAIL_ALERTS=false
ENABLE_PERPLEXITY_CHAT=true
